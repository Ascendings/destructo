{% extends 'templates/default.twig' %}

{% block content %}
	<div class="row">
		<div class="medium-8 medium-offset-2 columns">
			<div class="callout">
        <form class="destructo-form" action="{{ path_for('send') }}" method="POST" autocomplete="off">
          <label for="email">
            Send to
            <input type="email" name="email" id="email" placeholder="someone@example.com" />
          </label>

          <label for="message">
            Message
            <textarea name="message" id="message" placeholder="Enter a message to your recipient" cols="30" rows="10" ></textarea>
          </label>

          <button class="button">Send</button>
        </form>
			</div>
		</div>
	</div>
{% endblock %}
